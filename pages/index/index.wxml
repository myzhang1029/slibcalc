<!--pages/index/index.wxml-->
<ul>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Fct">阶乘计算器</view>
    <view class="dropdown_toggle {{showFct ? '' : 'hide'}}">
      <form bindsubmit="fct_formSubmit">
        <view class="weui-cells__title">输入计算数：</view>
        <view class="weui-cell weui-cell_input">
          <input name="num" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{fct_value}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Pc1">排列计算器</view>
    <view class="dropdown_toggle {{showPc1 ? '' : 'hide'}}">
      <form bindsubmit="pc_form1Submit">
        <view class="weui-cells__title">输入取出数n：</view>
        <view class="weui-cell weui-cell_input">
          <input name="n" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cells__title">输入可取量r：</view>
        <view class="weui-cell weui-cells_input">
          <input name="r" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{pc_value1}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Pc2">组合计算器</view>
    <view class="dropdown_toggle {{showPc2 ? '' : 'hide'}}">
      <form bindsubmit="pc_form2Submit">
        <view class="weui-cells__title">输入取出数n：</view>
        <view class="weui-cell weui-cell_input">
          <input name="n" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cells__title">输入可取量r：</view>
        <view class="weui-cell weui-cells_input">
          <input name="r" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{pc_value2}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Ddn">日期转自1月1日起的日数</view>
    <view class="dropdown_toggle {{showDdn ? '' : 'hide'}}">
      <view class="section__title">输入日期</view>
      <picker mode="date" value="{{ddn_date}}" start="1-01-06" bindchange="ddn_dateChange">
        <view class="picker">
          当前选择: {{ddn_date}}
        </view>
      </picker>
      <view class="weui-cell">{{ddn_value}}</view>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="D2r">角度转弧度</view>
    <view class="dropdown_toggle {{showD2r ? '' : 'hide'}}">
      <form bindsubmit="d2r_formSubmit">
        <view class="weui-cells__title">输入角度值：</view>
        <view class="weui-cell weui-cell_input">
          <input name="deg" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{d2r_value}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="R2d">弧度转角度</view>
    <view class="dropdown_toggle {{showR2d ? '' : 'hide'}}">
      <form bindsubmit="r2d_formSubmit">
        <view class="weui-cells__title">输入弧度值：</view>
        <view class="weui-cell weui-cell_input">
          <input name="rad" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{r2d_value}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Hms1">时转时分秒(不可用)</view>
    <view class="dropdown_toggle {{showHms1 ? '' : 'hide'}}">
      <form bindsubmit="hms_form1Submit">
        <view class="weui-cells__title">输入小时数：</view>
        <view class="weui-cell weui-cell_input">
          <input name="h" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{hms_value1}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Hms2">时分秒转时</view>
    <view class="dropdown_toggle {{showHms2 ? '' : 'hide'}}">
      <form bindsubmit="hms_form2Submit">
        <view class="weui-cells__title">输入小时数：</view>
        <view class="weui-cell weui-cell_input">
          <input name="h" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cells__title">输入分钟数：</view>
        <view class="weui-cell weui-cells_input">
          <input name="m" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cells__title">输入秒数：</view>
        <view class="weui-cell weui-cells_input">
          <input name="s" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{hms_value2}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Elr">欧拉函数计算器</view>
    <view class="dropdown_toggle {{showElr ? '' : 'hide'}}">
      <form bindsubmit="elr_formSubmit">
        <view class="weui-cells__title">输入计算数：</view>
        <view class="weui-cell weui-cell_input">
          <input name="num" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{elr_value}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Gcf">最大公因数计算器</view>
    <view class="dropdown_toggle {{showGcf ? '' : 'hide'}}">
      <form bindsubmit="gcf_formSubmit">
        <view class="weui-cells__title">输入计算数1：</view>
        <view class="weui-cell weui-cell_input">
          <input name="num1" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cells__title">输入计算数2：</view>
        <view class="weui-cell weui-cell_input">
          <input name="num2" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{gcf_value}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Lcm">最小公倍数计算器</view>
    <view class="dropdown_toggle {{showLcm ? '' : 'hide'}}">
      <form bindsubmit="lcm_formSubmit">
        <view class="weui-cells__title">输入计算数1：</view>
        <view class="weui-cell weui-cell_input">
          <input name="num1" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cells__title">输入计算数2：</view>
        <view class="weui-cell weui-cell_input">
          <input name="num2" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{lcm_value}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Prt">质数列表</view>
    <view class="dropdown_toggle {{showPrt ? '' : 'hide'}}">
      <form bindsubmit="prt_formSubmit">
        <view class="weui-cells__title">输入最小值：</view>
        <view class="weui-cell weui-cell_input">
          <input name="min" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cells__title">输入个数：</view>
        <view class="weui-cell weui-cell_input">
          <input name="n" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">列表</button>
          <button formType="reset" size="mini">重置</button>
        </view>
        <!-- Put the button forward in case the value is huge -->
        <view wx:for="{{prt_value}}" wx:key="key">
          <view class="weui-cell">{{item}}</view>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Pt">质数判断</view>
    <view class="dropdown_toggle {{showPt ? '' : 'hide'}}">
      <form bindsubmit="pt_formSubmit">
        <view class="weui-cells__title">输入数：</view>
        <view class="weui-cell weui-cell_input">
          <input name="num" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{pt_value}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">判断</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Rp">互质判断</view>
    <view class="dropdown_toggle {{showRp ? '' : 'hide'}}">
      <form bindsubmit="rp_formSubmit">
        <view class="weui-cells__title">输入计算数1：</view>
        <view class="weui-cell weui-cell_input">
          <input name="num1" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cells__title">输入计算数2：</view>
        <view class="weui-cell weui-cell_input">
          <input name="num2" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{rp_value}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">判断</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Jd1">儒略日转公元日(不可用)</view>
    <view class="dropdown_toggle {{showJd1 ? '' : 'hide'}}">
      <form bindsubmit="jd_form1Submit">
        <view class="weui-cell">{{jd_value1}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Jd2">公元日转儒略日(不可用)</view>
    <view class="dropdown_toggle {{showJd2 ? '' : 'hide'}}">
      <form bindsubmit="jd_form2Submit">
        <view class="weui-cell">{{jd_value2}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Ss">日出日落时间计算(不可用)</view>
    <view class="dropdown_toggle {{showSs ? '' : 'hide'}}">
      <form bindsubmit="ss_formSubmit">
        <view class="weui-cell">{{ss_value}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
  <li>
    <view class="dropdown_title" bindtap="toggleShow" data-param="Sd">太阳倾角计算</view>
    <view class="dropdown_toggle {{showSd ? '' : 'hide'}}">
      <form bindsubmit="sd_formSubmit">
        <view class="weui-cells__title">输入从1月1日起的日数：</view>
        <view class="weui-cell weui-cell_input">
          <input name="dn" class="weui-input" type="number" placeholder="0" />
        </view>
        <view class="weui-cell">{{sd_value}}</view>
        <view class="btn-area">
          <button formType="submit" type="primary" size="mini">计算</button>
          <button formType="reset" size="mini">重置</button>
        </view>
      </form>
    </view>
  </li>
</ul>
